@{
    ViewBag.Title = "Samples";
    ViewBag.SEODescription = "View several EndGate samples to learn key components of the EndGate framework.";
    ViewBag.SamplesPage = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style>
        #codeArea {
            display: none;
        }
