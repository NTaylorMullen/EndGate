@{
    ViewBag.Title = "Samples - " + ViewBag.SampleName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Styles/boxrow.css")
    @RenderSection("styles", required: false)
}

<ul class="breadcrumb">
    <li><a href="@Url.RouteUrl("Samples", new { sample = "Index" })">Samples</a> <span class="divider">/</span></li>
    <li class="active">@ViewBag.SampleName</li>
</ul>

@RenderBody()

@section scripts {
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/codemirrorjs")
}